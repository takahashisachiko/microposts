<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <p>
          <%= @user.name %>
          [ <%= link_to "edit" , edit_user_path %> ]
        </p>
      </h1>
      <p>
        <%= @user.age %> æ­³
      </p>
      <p>
        <%= @user.area %>
      </p>
      <p>
        <%= @user.introduction %>
      </p>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>